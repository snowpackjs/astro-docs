---
import languages from '../../i18n/languages';
import { useTranslations } from '../../i18n/util';
import BaseLayout from '../../layouts/BaseLayout.astro';
import LeftSidebar from '../../components/LeftSidebar/LeftSidebar.astro';

export const getStaticPaths = () => Object.keys(languages).map((lang) => ({ params: { lang } }));
const { lang = 'en' } = Astro.params;
const t = useTranslations(Astro);
---

<BaseLayout content={{ title: t('offline.page.title') }}>
	<h1>{t('offline.page.title')}</h1>
	<p>{t('offline.page.content')}</p>
	<a href={`/${lang}/`}>{t('offline.page.linkText')}</a>
</BaseLayout>

<style>
	h1 {
		padding-top: 100px;
	}
</style>
